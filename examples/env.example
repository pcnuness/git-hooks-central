# =============================================================================
# VARIÁVEIS DE AMBIENTE PARA HOOKS DE SEGURANÇA
# =============================================================================
# Copie este arquivo para .env e configure conforme necessário
# =============================================================================

# =============================================================================
# CONFIGURAÇÕES GERAIS
# =============================================================================

# Branch padrão do projeto
DEFAULT_BRANCH=main

# Timeout para verificações de segurança (em segundos)
SECURITY_HOOK_TIMEOUT=300

# Nível de log (DEBUG, INFO, WARNING, ERROR)
SECURITY_HOOK_LOG_LEVEL=INFO

# Habilitar modo debug
SECURITY_HOOK_DEBUG=false

# Habilitar modo rápido (pula verificações opcionais)
SECURITY_HOOK_FAST_MODE=false

# =============================================================================
# CONFIGURAÇÕES DE SAST
# =============================================================================

# Configuração do Semgrep
SEMGREP_CONFIG=p/owasp-top-ten

# Timeout do Semgrep (em segundos)
SEMGREP_TIMEOUT=60

# Diretório de cache do Semgrep
SEMGREP_CACHE_DIR=$HOME/.cache/semgrep

# =============================================================================
# CONFIGURAÇÕES DE DEPENDENCY SCANNING
# =============================================================================

# Habilitar OWASP Dependency-Check
DEPENDENCY_CHECK_ENABLE=true

# CVSS mínimo para falhar (0.1 a 10.0)
DEPENDENCY_CHECK_FAIL_ON_CVSS=7.0

# Diretório de saída dos relatórios
DEPENDENCY_CHECK_OUTPUT_DIR=reports/dependency-check

# =============================================================================
# CONFIGURAÇÕES DE SECRET DETECTION
# =============================================================================

# Habilitar GitLeaks
GITLEAKS_ENABLE=true

# Habilitar TruffleHog
TRUFFLEHOG_ENABLE=true

# Diretório de cache do GitLeaks
GITLEAKS_CACHE_DIR=$HOME/.cache/gitleaks

# =============================================================================
# CONFIGURAÇÕES DE NOTIFICAÇÃO
# =============================================================================

# Webhook do Slack
SLACK_WEBHOOK_URL=

# Webhook do Teams
TEAMS_WEBHOHOOK_URL=

# Email para notificações
SECURITY_NOTIFICATION_EMAIL=

# =============================================================================
# CONFIGURAÇÕES DE CACHE
# =============================================================================

# Habilitar cache de resultados
SECURITY_HOOK_CACHE_ENABLE=true

# TTL do cache (em horas)
SECURITY_HOOK_CACHE_TTL=24

# Diretório de cache
SECURITY_HOOK_CACHE_DIR=$HOME/.cache/security-hooks

# =============================================================================
# CONFIGURAÇÕES DE PERFORMANCE
# =============================================================================

# Número máximo de verificações paralelas
SECURITY_HOOK_MAX_PARALLEL=3

# Limite de memória (ex: 2G, 512M)
SECURITY_HOOK_MEMORY_LIMIT=2G

# =============================================================================
# CONFIGURAÇÕES ESPECÍFICAS PARA JAVA
# =============================================================================

# Habilitar SpotBugs
SPOTBUGS_ENABLE=true

# Habilitar PMD
PMD_ENABLE=true

# Configuração do Gradle dependency check plugin
GRADLE_DEPENDENCY_CHECK_ENABLE=true

# =============================================================================
# CONFIGURAÇÕES ESPECÍFICAS PARA NODE.JS
# =============================================================================

# Nível de auditoria do npm (low, moderate, high, critical)
NPM_AUDIT_LEVEL=high

# Nível de auditoria do yarn (low, moderate, high, critical)
YARN_AUDIT_LEVEL=high

# Nível de auditoria do pnpm (low, moderate, high, critical)
PNPM_AUDIT_LEVEL=high

# Habilitar Snyk (se disponível)
SNYK_ENABLE=false
SNYK_API_TOKEN=

# =============================================================================
# CONFIGURAÇÕES DE FALLBACK
# =============================================================================

# Continuar se uma ferramenta falhar
SECURITY_HOOK_CONTINUE_ON_FAILURE=true

# Usar modo offline se serviços estiverem indisponíveis
SECURITY_HOOK_OFFLINE_MODE=true

# =============================================================================
# CONFIGURAÇÕES DE PROXY (se necessário)
# =============================================================================

# Proxy HTTP
HTTP_PROXY=

# Proxy HTTPS
HTTPS_PROXY=

# Hosts que não usam proxy
NO_PROXY=localhost,127.0.0.1

# =============================================================================
# CONFIGURAÇÕES DE TESTE
# =============================================================================

# Habilitar modo de teste
SECURITY_HOOK_TEST_MODE=false

# Diretório de testes
SECURITY_HOOK_TEST_DIR=tests

# =============================================================================
# CONFIGURAÇÕES DE RELATÓRIOS
# =============================================================================

# Formato de saída (text, json, html, xml)
SECURITY_HOOK_OUTPUT_FORMAT=text

# Diretório de relatórios
SECURITY_HOOK_REPORTS_DIR=reports/security

# Incluir relatórios detalhados
SECURITY_HOOK_DETAILED_REPORTS=true
